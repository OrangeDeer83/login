<!doctype html>
<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
	<script type="text/javascript">
		function login(){
			var xhr = new XMLHttpRequest();
			xhr.open("POST", "http://localhost:3000/show/b");
			xhr.setRequestHeader('Content-Type', 'application/json');
			var json = {"id": document.getElementById("id").value,"pw": document.getElementById("pw").value};
			xhr.send(JSON.stringify(json));
				xhr.onload = function(){
					alert(xhr.responseText);
				}
		}	
	</script>
</head>
<body>
		Username<input type="text" id="id"><br>
		Password<input type="text" id="pw"><br>
		<input type="submit" onclick="login();">
</body>
</html>